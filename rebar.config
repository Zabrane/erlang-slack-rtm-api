{mod_cond, all}.
{sub_dirs, [
    "rel",
    "src"
]}.
{lib_dirs,
    [
        "deps",
        "apps"
    ]
}.
{deps, [
    {jsx, "2.8.0", {git, "https://github.com/talentdeficit/jsx.git", {tag, "2.8.0"}}},
    {gun, "1.0.0-pre.1", {git, "git://github.com/ninenines/gun.git", {tag, "1.0.0-pre.1"}}},
    {lager, "3.2.1", {git, "https://github.com/basho/lager.git", {tag, "3.2.1"}}}
]}.
{relx, [
    {release, {slack_rtm, "0.1"}, [sasl, slack_rtm]},
    {dev_mode, false},
    {include_erts, true},
    {overlay, [
        {template, "files/app.config", "releases/\{\{rel_vsn\}\}/sys.config"}
    ]},
    {extended_start_script, true}]
}.
{profiles, [
    {prod, [
        {relx, [
            {dev_mode, false},
            {include_erts, true}
        ]}
    ]}
]}.
{erl_opts, [
    debug_info,
    {parse_transform, lager_transform}
]}.
